<% layout('layouts/boilerplate') -%>
    <h1>Edit Article</h1>
    <form action="/articles/<%=article._id%>/?_method=PUT" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" type="text" name="article[title]" id="title" value="<%=article.title%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input class="form-control" type="text" name="article[author]" id="author" value="<%=article.author%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input class="form-control" type="text" name="article[description]" id="description" value="<%=article.description%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="markdown" class="form-label">Markdown</label>
            <textarea class="form-control" name="article[markdown]" id="markdown" cols="30" rows="10" required><%= article.markdown%> </textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <a href="/articles/<%=article._id%>" class="btn btn-secondary mb-3">Cancel</a>
        <button class="btn btn-success mb-3">Edit</button>
    </form>
