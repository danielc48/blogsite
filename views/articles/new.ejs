<% layout('layouts/boilerplate') -%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1>New Article</h1>
                <form action="/articles" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="article[title]" id="title" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="author" class="form-label">Author</label>
                        <input type="text" name="article[author]" id="author" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" name="article[description]" id="description" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="markdown" class="form-label">Markdown</label>
                        <textarea name="article[markdown]" id="markdown" cols="30" rows="10" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <a href="/articles" class="btn btn-secondary mb-3">Cancel</a>
                    <button class="btn btn-success mb-3">Add</button>
                    
                    
                </form>

        </div>
    </div>
    